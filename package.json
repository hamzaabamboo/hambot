{
  "name": "hambot",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack && next build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS='--max-old-space-size=1024' nest start -e 'node --experimental-wasm-threads'",
    "start:dev": "nest start --watch -e 'node --experimental-wasm-threads'",
    "start:debug": "nest start --debug --watch  -e 'node --experimental-wasm-threads'",
    "start:hot": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=1024' node --experimental-wasm-threads dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "@ffmpeg/core": "^0.8.5",
    "@ffmpeg/ffmpeg": "^0.9.7",
    "@line/bot-sdk": "^7.3.0",
    "@mediafish/rtmp-server": "^0.1.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/platform-fastify": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "canvas": "^2.7.0",
    "discord.js": "^12.5.3",
    "fast-xml-parser": "^3.19.0",
    "fastify-nextjs": "^5.4.1",
    "fb": "^2.0.0",
    "gaxios": "^4.2.0",
    "he": "^1.2.0",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "moment": "^2.27.0",
    "needle": "^2.6.0",
    "next": "^11.1.0",
    "node-ical": "^0.13.0",
    "promptpay-qr": "^0.4.4",
    "qr-image": "^3.2.0",
    "rc-slider": "9.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rrule": "2.6.8",
    "rtmp-server": "^0.2.0",
    "rxjs": "^6.6.7",
    "trello": "^0.10.0",
    "ytdl": "^1.3.3",
    "ytdl-core": "^4.5.0",
    "ytsr": "^3.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.41",
    "@types/qr-image": "^3.2.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.5",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
