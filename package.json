  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS='--max-old-space-size=1024' nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=1024' node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "@line/bot-sdk": "^7.0.0",
    "@mediafish/rtmp-server": "^0.1.1",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/schedule": "^0.4.0",
    "@react-ssr/core": "^0.24.0",
    "@react-ssr/nestjs-express": "^0.24.0",
    "crypto": "^1.0.1",
    "discord.js": "^12.2.0",
    "fast-xml-parser": "^3.17.4",
    "fb": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "he": "^1.2.0",
    "lodash": "^4.17.19",
    "mkdirp": "^1.0.4",
    "moment": "^2.27.0",
    "node-ical": "^0.12.1",
    "node-media-server": "^2.2.2",
    "promptpay-qr": "^0.4.4",
    "qr-image": "^3.2.0",
    "rc-slider": "9.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rrule": "2.6.6",
    "rtmp-server": "^0.2.0",
    "rxjs": "^6.5.4",
    "trello": "^0.10.0",
    "ytdl": "^1.3.3",
    "ytdl-core": "^4.0.2",
    "ytsr": "^1.0.1"
