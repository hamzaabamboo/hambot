{
  "name": "hambot",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "NODE_OPTIONS='--max-old-space-size=1024' nest build --webpack && next build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS='--max-old-space-size=1024' nest start -e 'node --experimental-wasm-threads'",
    "start:dev": "nest start --watch -e 'node --experimental-wasm-threads'",
    "start:debug": "nest start --debug --watch  -e 'node --experimental-wasm-threads'",
    "start:hot": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=1024' node --experimental-wasm-threads dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@discordjs/voice": "^0.6.0",
    "@ffmpeg/core": "^0.10.0",
    "@ffmpeg/ffmpeg": "^0.10.1",
    "@line/bot-sdk": "^7.3.0",
    "@mediafish/rtmp-server": "^0.1.1",
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/platform-fastify": "^8.0.6",
    "@nestjs/schedule": "^1.0.1",
    "canvas": "^2.8.0",
    "discord-api-types": "^0.22.0",
    "discord.js": "^13.1.0",
    "fast-xml-parser": "^3.19.0",
    "fastify-nextjs": "^6.0.0",
    "fb": "^2.0.0",
    "gaxios": "^4.3.0",
    "he": "^1.2.0",
    "libsodium-wrappers": "^0.7.9",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "moment": "^2.27.0",
    "needle": "^3.0.0",
    "next": "^11.1.0",
    "node-ical": "^0.13.0",
    "promptpay-qr": "^0.4.4",
    "qr-image": "^3.2.0",
    "rc-slider": "9.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rrule": "2.6.8",
    "rtmp-server": "^0.2.0",
    "rxjs": "^7.3.0",
    "trello": "^0.10.0",
    "ytdl": "^1.3.3",
    "ytdl-core": "^4.9.1",
    "ytsr": "^3.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.6",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.4",
    "@types/qr-image": "^3.2.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
