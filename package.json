{
  "name": "hambot",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack && next build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS='--max-old-space-size=1024' nest start -e 'node --experimental-wasm-threads --experimental-wasm-bulk-memory'",
    "start:dev": "nest start --watch -e 'node --experimental-wasm-threads --experimental-wasm-bulk-memory'",
    "start:debug": "nest start --debug --watch  -e 'node --experimental-wasm-threads --experimental-wasm-bulk-memory'",
    "start:hot": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=1024' node --experimental-wasm-threads --experimental-wasm-bulk-memory dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "@ffmpeg/core": "^0.8.5",
    "@ffmpeg/ffmpeg": "^0.9.6",
    "@line/bot-sdk": "^7.0.0",
    "@mediafish/rtmp-server": "^0.1.1",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/platform-fastify": "^7.6.5",
    "@nestjs/schedule": "^0.4.0",
    "discord.js": "^12.2.0",
    "fast-xml-parser": "^3.17.4",
    "fastify-nextjs": "^5.1.0",
    "fb": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "he": "^1.2.0",
    "lodash": "^4.17.19",
    "mkdirp": "^1.0.4",
    "moment": "^2.27.0",
    "needle": "^2.5.2",
    "next": "^10.0.4",
    "node-ical": "^0.12.1",
    "promptpay-qr": "^0.4.4",
    "qr-image": "^3.2.0",
    "rc-slider": "9.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rrule": "2.6.6",
    "rtmp-server": "^0.2.0",
    "rxjs": "^6.5.4",
    "trello": "^0.10.0",
    "ytdl": "^1.3.3",
    "ytdl-core": "^4.0.2",
    "ytsr": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@types/express": "^4.17.2",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/jest": "26.0.19",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.14.20",
    "@types/qr-image": "^3.2.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
